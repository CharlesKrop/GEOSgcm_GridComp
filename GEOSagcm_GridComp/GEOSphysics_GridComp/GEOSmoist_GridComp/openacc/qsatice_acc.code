
if(UTBL_ACC) then

   if(FIRST_ACC) then
      FIRST_ACC = .false.
      call ESINIT_ACC
   end if

   if    (TX<=TMINTBL) then
      EX=ESTBLE_ACC(1)
      if(present(DQ)) DDQ = 0.0
   elseif(TX>=ZEROC  ) then
      EX=ESTFRZ_ACC
      if(present(DQ)) DDQ = 0.0
   else
      TT  = (TX - TMINTBL)*DEGSUBS+1
      IT  = int(TT)
      DDQ = ESTBLE_ACC(IT+1) - ESTBLE_ACC(IT)
      EX  =  ((TT-IT)*DDQ + ESTBLE_ACC(IT))
   end if


   if(present(PL)) then
      if(PX > EX) then
         DD = (ESFAC/(PX - (1.0-ESFAC)*EX))
         EX = EX*DD
         if(present(DQ)) DX = DDQ*ERFAC*PX*DD*DD
      else
         EX  = MAX_MIXING_RATIO
         if(present(DQ)) DX = 0.0
      end if
   else
      if(present(DQ)) DX = DDQ
   end if

else  ! Exact Formulation

   if    (TX<TMINICE_ACC) then
      TI = TMINICE_ACC
   elseif(TX>ZEROC  ) then
      TI = ZEROC
   else
      TI = TX
   end if

#include "esatice_acc.code"

   if(present(DQ)) then
      if    (TX<TMINICE_ACC) then
         DDQ = 0.0
      elseif(TX>ZEROC  ) then
         DDQ = 0.0
      else
         if(PX>EX) then
            DD = EX
            TI = TX + DELTA_T
#include "esatice_acc.code"
            DDQ = EX-DD
            EX  = DD
         endif
      end if
   end if

   if(present(PL)) then
      if(PX > EX) then
         DD = ESFAC/(PX - (1.0-ESFAC)*EX)
         EX = EX*DD
         if(present(DQ)) DX = DDQ*ERFAC*PX*DD*DD
      else
         EX = MAX_MIXING_RATIO
         if(present(DQ)) DX = 0.0
      end if
   else
      if(present(DQ)) DX = DDQ*(1.0/DELTA_T)
   end if


end if



